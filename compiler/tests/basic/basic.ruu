/**
    Comment 1
*/
entity user {
    personnel
        :is-rule
        :is-admin(one two)
        -> company;
}

entity company {
    read;
    read.basic;

    write;

    customer-app -> credit-app;
    supplier-app -> credit-app;
}

entity credit-app {
    read;

    supplier -> company;
    customer -> company;
}


fragment basic-credit-app for credit-app {
    // Comment 2
    read;

    /** Comment 3 **/
    // Comment 4
    supplier {
        read;
        // Comment 5
        supplier-app {
            // Comment 6
            #basic-credit-app;
        }
    }

    customer:has-test(first second) :has-another-test(third fourth) {
        read;
        customer-app { #basic-credit-app; }
    }
}

// Comment 7
@user {
    // Comment 8
    personnel:is-admin {
        // Comment 9
        read.basic;
        // Comment 10
        write;

        supplier-app { #basic-credit-app; }
    }
}
